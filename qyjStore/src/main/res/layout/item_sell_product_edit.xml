<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical" android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/qmui_config_color_white">

    <GridLayout
            android:id="@+id/item_sell_pruduct_edit_gl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/qmui_config_color_white"
            android:columnCount="2"
            android:focusable="true"
            android:focusableInTouchMode="true"
    >
        <TextView
                android:id="@+id/item_sell_pruduct_edit_productNameLabel"
                android:layout_height="@dimen/qmui_list_item_height"
                android:layout_width="wrap_content"
                android:text="产品"
                android:background="@drawable/qmui_divider_bottom_bitmap"
                android:gravity="center_vertical"
                android:textColor="?attr/qmui_config_color_gray_1"
                android:textSize="?attr/qmui_common_list_item_title_h_text_size"
                android:paddingLeft="@dimen/common_content_spacing"
                android:paddingRight="@dimen/common_content_spacing"
        />
        <EditText
                android:id="@+id/item_sell_pruduct_edit_productName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/qmui_divider_bottom_bitmap"
                android:inputType="text"
                android:layout_gravity="fill"
                android:hint="请选择产品"
                android:maxLength="20"
        />

        <TextView
                android:id="@+id/item_sell_pruduct_edit_unitLabel"
                android:layout_height="@dimen/qmui_list_item_height"
                android:layout_width="wrap_content"
                android:text="单位"
                android:gravity="center_vertical|end"
                android:layout_gravity="fill"
                android:textColor="?attr/qmui_config_color_gray_1"
                android:textSize="?attr/qmui_common_list_item_title_h_text_size"
                android:paddingLeft="@dimen/common_content_spacing"
                android:paddingRight="@dimen/common_content_spacing"
                android:background="@drawable/qmui_divider_bottom_bitmap"
        />
        <TextView
                android:id="@+id/item_sell_pruduct_edit_unit"
                android:layout_height="@dimen/qmui_list_item_height"
                android:layout_width="wrap_content"
                android:text="袋"
                android:gravity="center_vertical"
                android:layout_gravity="fill"
                android:textColor="?attr/qmui_config_color_gray_1"
                android:paddingLeft="@dimen/common_content_spacing"
                android:paddingRight="@dimen/common_content_spacing"
                android:background="@drawable/qmui_divider_bottom_bitmap"
        />

        <TextView
                android:id="@+id/item_sell_pruduct_edit_stockAmountLabel"
                android:layout_height="@dimen/qmui_list_item_height"
                android:layout_width="wrap_content"
                android:text="进价"
                android:background="@drawable/qmui_divider_bottom_bitmap"
                android:gravity="center_vertical|end"
                android:layout_gravity="fill"
                android:textColor="?attr/qmui_config_color_gray_1"
                android:textSize="?attr/qmui_common_list_item_title_h_text_size"
                android:paddingLeft="@dimen/common_content_spacing"
                android:paddingRight="@dimen/common_content_spacing"
        />
        <EditText
                android:id="@+id/item_sell_pruduct_edit_stockAmount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/qmui_divider_bottom_bitmap"
                android:inputType="numberDecimal"
                android:digits="1234567890."
                android:layout_gravity="fill"
                android:hint="请输入进价"
                android:maxLength="20"
        />

        <TextView
                android:id="@+id/item_sell_pruduct_edit_sellAmountLabel"
                android:layout_height="@dimen/qmui_list_item_height"
                android:layout_width="wrap_content"
                android:text="售价"
                android:background="@drawable/qmui_divider_bottom_bitmap"
                android:gravity="center_vertical"
                android:layout_gravity="right"
                android:textColor="?attr/qmui_config_color_gray_1"
                android:textSize="?attr/qmui_common_list_item_title_h_text_size"
                android:paddingLeft="@dimen/common_content_spacing"
                android:paddingRight="@dimen/common_content_spacing"
        />
        <EditText
                android:id="@+id/item_sell_pruduct_edit_sellAmount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/qmui_divider_bottom_bitmap"
                android:inputType="numberDecimal"
                android:digits="1234567890."
                android:layout_gravity="fill"
                android:hint="请输入售价"
                android:maxLength="10"
        />

        <TextView
                android:id="@+id/item_sell_pruduct_edit_numberLabel"
                android:layout_height="@dimen/qmui_list_item_height"
                android:layout_width="wrap_content"
                android:text="数量"
                android:background="@drawable/qmui_divider_bottom_bitmap"
                android:gravity="center_vertical"
                android:layout_gravity="right"
                android:textColor="?attr/qmui_config_color_gray_1"
                android:textSize="?attr/qmui_common_list_item_title_h_text_size"
                android:paddingLeft="@dimen/common_content_spacing"
                android:paddingRight="@dimen/common_content_spacing"
        />
        <android.support.constraint.ConstraintLayout
                android:layout_height="match_parent"
                android:layout_gravity="fill">
            <EditText
                    android:id="@+id/item_sell_pruduct_edit_number"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/qmui_list_item_height"
                    android:background="@drawable/qmui_divider_bottom_bitmap"
                    android:inputType="numberDecimal"
                    android:digits="1234567890"
                    android:hint="请输入数量"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/item_sell_pruduct_edit_removeBtn"
            />
            <com.qmuiteam.qmui.widget.roundwidget.QMUIRoundButton
                    android:id="@+id/item_sell_pruduct_edit_removeBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:clickable="true"
                    android:focusable="true"
                    style="@style/QyjHollowButton"
                    android:text="移除"
                    app:qmui_radius="4dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginEnd="4dp"/>
        </android.support.constraint.ConstraintLayout>

    </GridLayout>

</LinearLayout>