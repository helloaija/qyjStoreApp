<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:focusable="true"
        android:focusableInTouchMode="true">

    <!--搜索框-->
    <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/fragment_main_sell_et_query"
            android:layout_marginTop="7dp"
            android:layout_marginStart="16dp"
            android:hint="@string/hint_sell_query"
            app:layout_constraintWidth_percent="0.6"
            app:layout_constraintStart_toStartOf="parent"/>

    <!--搜索按钮-->
    <Button
            android:text="@string/btn_query"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/fragment_main_sell_btn_query"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="49dp"
            android:layout_marginBottom="9dp"
            app:layout_constraintStart_toEndOf="@+id/fragment_main_sell_et_query"/>

    <android.support.constraint.Barrier
            android:id="@+id/fragment_main_sell_barrier"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:barrierDirection="bottom"
            app:constraint_referenced_ids="fragment_main_sell_et_query,fragment_main_sell_btn_query"/>

    <!--出库单列表-->
    <com.jcodecraeer.xrecyclerview.XRecyclerView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/fragment_main_sell_xrv"
            android:divider="@android:color/transparent"
            android:dividerHeight="8dp"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintTop_toBottomOf="@+id/fragment_main_sell_barrier"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>
</android.support.constraint.ConstraintLayout>