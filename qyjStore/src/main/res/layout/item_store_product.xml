<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:background="@color/qmui_config_color_white">

    <!--产品名-->
    <TextView
            android:id="@+id/item_store_productTitle"
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/item_store_numberLayout"
            app:layout_constraintBottom_toBottomOf="@id/item_store_numberLayout"
            android:textSize="@dimen/qyj_list_item_title_s_text_size"
            app:layout_constraintEnd_toStartOf="@id/item_store_numberLayout"
            app:layout_constraintHorizontal_weight="4"
    />

    <!--剩余数量-->
    <android.support.constraint.ConstraintLayout
            android:id="@+id/item_store_numberLayout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@id/item_store_productTitle"
            app:layout_constraintEnd_toStartOf="@id/item_store_soldNumberLayout"
            app:layout_constraintHorizontal_weight="2"
    >
        <TextView
                android:id="@+id/item_store_numberLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="剩余"
                android:layout_marginBottom="@dimen/qyj_list_item_detail_s_margin_bottom"
                android:textSize="@dimen/qyj_list_item_detail_s_text_size"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="@id/item_store_number"
        />
        <TextView
                android:id="@+id/item_store_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/qyj_list_item_title_m_text_size"
                android:text="0"
                app:layout_constraintStart_toEndOf="@id/item_store_numberLabel"
        />
        <TextView
                android:id="@+id/item_store_productUnit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="瓶"
                android:layout_marginBottom="@dimen/qyj_list_item_detail_s_margin_bottom"
                android:textSize="@dimen/qyj_list_item_detail_s_text_size"
                app:layout_constraintStart_toEndOf="@id/item_store_number"
                app:layout_constraintBottom_toBottomOf="@id/item_store_number"
        />
    </android.support.constraint.ConstraintLayout>

    <!--已售数量-->
    <android.support.constraint.ConstraintLayout
            android:id="@+id/item_store_soldNumberLayout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@id/item_store_numberLayout"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_weight="2"
    >
        <TextView
                android:id="@+id/item_store_soldNumberLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="已售"
                android:layout_marginBottom="@dimen/qyj_list_item_detail_s_margin_bottom"
                android:textSize="@dimen/qyj_list_item_detail_s_text_size"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="@id/item_store_soldNumber"
        />
        <TextView
                android:id="@+id/item_store_soldNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textSize="@dimen/qyj_list_item_title_m_text_size"
                app:layout_constraintStart_toEndOf="@id/item_store_soldNumberLabel"
        />
        <TextView
                android:id="@+id/item_store_sellProductUnit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="瓶"
                android:layout_marginBottom="@dimen/qyj_list_item_detail_s_margin_bottom"
                android:textSize="@dimen/qyj_list_item_detail_s_text_size"
                app:layout_constraintStart_toEndOf="@id/item_store_soldNumber"
                app:layout_constraintBottom_toBottomOf="@id/item_store_soldNumber"
        />
    </android.support.constraint.ConstraintLayout>

    <!--预售价-->
    <TextView
            android:id="@+id/item_store_sellPriceLabel"
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:text="预售价：￥"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/item_store_numberLayout"
    />
    <TextView
            android:id="@+id/item_store_sellPrice"
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:text="0.00"
            app:layout_constraintStart_toEndOf="@id/item_store_sellPriceLabel"
            app:layout_constraintBottom_toBottomOf="@id/item_store_sellPriceLabel"
    />

    <!--最近进价-->
    <TextView
            android:id="@+id/item_store_stockPriceLabel"
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:text="最新进价：￥"
            android:layout_marginLeft="6dp"
            app:layout_constraintStart_toEndOf="@id/item_store_sellPrice"
            app:layout_constraintBottom_toBottomOf="@id/item_store_sellPriceLabel"
    />
    <TextView
            android:id="@+id/item_store_stockPrice"
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:text="0.00"
            app:layout_constraintStart_toEndOf="@id/item_store_stockPriceLabel"
            app:layout_constraintBottom_toBottomOf="@id/item_store_sellPriceLabel"
    />

</android.support.constraint.ConstraintLayout>
